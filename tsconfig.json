{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "outDir": "dist/server",
        "baseUrl": ".",
        "paths": {
            "@interfaces": [ "server/interfaces" ],
            "@helpersUrl": [ "server/helpers/url" ],
            "@helpers/*": [ "server/helpers/*" ],
            "*": [
                "node_modules/*",
                "server/types/*"
            ]
        },
        "lib": ["es2017", "dom"]
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}